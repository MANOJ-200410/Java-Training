import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        
        Scanner sc = new Scanner(System.in);
        String name = sc.next();
        int a = sc.nextInt();
        int b = sc.nextInt();
        double c = sc.nextDouble();
        System.out.println("My name is " +name+", my Instagram has " + a + " followers, I have posted " + b + " posts, and I use Instagram for " + c + " hours daily.");
        
    }
}
