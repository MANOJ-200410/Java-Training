import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int a = sc.nextInt();
        int sum = a * (a+1) / 2;
        int fact = 1;
        for(int i = 1; i<=a; i++){
            fact = fact * i;
        }
        System.out.println(sum);
        System.out.println(fact);
        
    }
}
