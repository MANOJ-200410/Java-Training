import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int n = Math.abs(sc.nextInt());
        
        int sum = 0;
        
        
        
        while(n!=0){
           
            int a = n%10;
            sum = sum + a;
            n = n/10;
            
            
            
        }
        
        
        System.out.println(sum);
        
        
        
    }
}
